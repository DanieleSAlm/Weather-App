[32m+[m[32mfunction formatDate(date) {[m
[32m+[m[32m  let hours = date.getHours();[m
[32m+[m[32m  if (hours < 10) {[m
[32m+[m[32m    hours = `0${hours}`;[m
[32m+[m[32m  }[m
[32m+[m[32m  let minutes = currentTime.getMinutes();[m
[32m+[m[32m  if (minutes < 10) {[m
[32m+[m[32m    minutes = `0${minutes}`;[m
[32m+[m[32m  }[m
[32m+[m[32m  let dayIndex = currentTime.getDay();[m
[32m+[m[32m  let days = [[m
[32m+[m[32m    "Sunday",[m
[32m+[m[32m    "Monday",[m
[32m+[m[32m    "Tuesday",[m
[32m+[m[32m    "Wednesday",[m
[32m+[m[32m    "Thursday",[m
[32m+[m[32m    "Friday",[m
[32m+[m[32m    "Saturday"[m
[32m+[m[32m  ];[m
[32m+[m[32m  let day = days[dayIndex];[m
[32m+[m[32m  return `${day} ${hours}:${minutes}`;[m
[32m+[m[32m}[m
[32m+[m[32mfunction displayWeatherCondition(response) {[m
[32m+[m[32m  document.querySelector("#city").innerHTML = response.data.name;[m
[32m+[m[32m  document.querySelector("#temperature").innerHTML = Math.round([m
[32m+[m[32m    response.data.main.temp[m
[32m+[m[32m  );[m
[32m+[m[32m  document.querySelector("#humidity").innerHTML = response.data.main.humidity;[m
[32m+[m[32m  document.querySelector("#wind").innerHTML = Math.round([m
[32m+[m[32m    response.data.wind.speed[m
[32m+[m[32m  );[m
[32m+[m[32m  document.querySelector("#description").innerHTML =[m
[32m+[m[32m    response.data.weather[0].main;[m
[32m+[m[32m}[m
[32m+[m[32mfunction searchCity(city) {[m
[32m+[m[32m  let apiKey = "26445b0f8559f89be3778dc24dbf4fab";[m
[32m+[m[32m  let apiUrl = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;[m
[32m+[m[32m  axios.get(apiUrl).then(displayWeatherCondition);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction handleSubmit(event) {[m
[32m+[m[32m  event.preventDefault();[m
[32m+[m[32m  let city = document.querySelector("#city-input").value;[m
[32m+[m[32m  searchCity(city);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction searchLocation(position) {[m
[32m+[m[32m  let apiKey = "26445b0f8559f89be3778dc24dbf4fab";[m
[32m+[m[32m  let apiUrl = `https://api.openweathermap.org/data/2.5/weather?lat=${position.coords.latitude}&lon=${position.coords.longitude}&appid=${apiKey}&units=metric`;[m
[32m+[m[32m  axios.get(apiUrl).then(displayWeatherCondition);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction getCurrentLocation(event) {[m
[32m+[m[32m  event.preventDefault();[m
[32m+[m[32m  navigator.geolocation.getCurrentPosition(searchLocation);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction convertToFahrenheit(event) {[m
[32m+[m[32m  event.preventDefault();[m
[32m+[m[32m  let temperatureElement = document.querySelector("#temperature");[m
[32m+[m[32m  temperatureElement.innerHTML = 66;[m
[32m+[m[32m}[m
[32m+[m[32mfunction convertToCelsius(event) {[m
[32m+[m[32m  event.preventDefault();[m
[32m+[m[32m  let temperatureElement = document.querySelector("#temperature");[m
[32m+[m[32m  temperatureElement.innerHTML = 19;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mlet dateElement = document.querySelector("#date");[m
[32m+[m[32mlet currentTime = new Date();[m
[32m+[m[32mdateElement.innerHTML = formatDate(currentTime);[m
[32m+[m
[32m+[m[32mlet searchForm = document.querySelector("#search-form");[m
[32m+[m[32msearchForm.addEventListener("submit", handleSubmit);[m
[32m+[m
[32m+[m[32mlet currentLocationButton = document.querySelector("#current-location-button");[m
[32m+[m[32mcurrentLocationButton.addEventListener("click", getCurrentLocation);[m
[32m+[m
[32m+[m[32mlet celsiusLink = document.querySelector("#celsius-link");[m
[32m+[m[32mcelsiusLink.addEventListener("click", convertToCelsius);[m
[32m+[m
